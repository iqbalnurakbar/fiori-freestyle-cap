<mvc:View
    controllerName="fiori.research.controller.BookList"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
>
    <SplitApp id="splitApp">
        <!-- MASTER: Authors List -->
        <masterPages>
            <Page title="Dashboard">
                <subHeader>
                    <Toolbar>
                        <Title text="Authors" />
                        <ToolbarSpacer />

                        <Button
                            icon="sap-icon://add"
                            tooltip="Add Author"
                            press=".onAddAuthor"
                        />
                        <Button
                            id="editAuthorBtn"
                            icon="sap-icon://edit"
                            tooltip="Edit Selected Author"
                            press=".onEditAuthor"
                            enabled="{view>/authorSelected}"
                        />
                        <Button
                            id="deleteAuthorBtn"
                            icon="sap-icon://delete"
                            tooltip="Delete Selected Author"
                            type="Reject"
                            press=".onDeleteAuthor"
                            enabled="{view>/authorSelected}"
                        />
                    </Toolbar>
                </subHeader>

                <List
                    id="authorList"
                    mode="SingleSelectMaster"
                    items="{ path: '/Authors',
                                 parameters: {
                                    $select: 'ID,name,bio,isDeleted',
                                    $filter: 'isDeleted eq false'
                                 } 
                                }"
                    itemPress=".onAuthorSelect"
                    selectionChange=".onAuthorSelect"
                >
                    <StandardListItem
                        title="{name}"
                        description="{bio}"
                        type="Active"
                    />
                </List>
            </Page>
        </masterPages>

        <!-- x: Books Table -->
        <detailPages>
            <Page
                id="detailPage"
                title="{= 'Books by ' + ${authorList>/selectedContexts/0/parameters/listItem/name} }"
            >
                <subHeader>
                    <Toolbar>
                        <Title text="Books" />
                        <ToolbarSpacer />

                        <Button
                            id="addBookBtn"
                            icon="sap-icon://add"
                            tooltip="Add Book"
                            press=".onAddBook"
                            enabled="{view>/bookSelected}"
                        />
                        <Button
                            id="editBookBtn"
                            icon="sap-icon://edit"
                            tooltip="Edit Selected Book"
                            press=".onEditBook"
                            enabled="{view>/bookSelected}"
                        />
                        <Button
                            id="deleteBookBtn"
                            icon="sap-icon://delete"
                            tooltip="Delete Selected Book"
                            type="Reject"
                            press=".onDeleteBook"
                            enabled="{view>/bookSelected}"
                        />
                    </Toolbar>
                </subHeader>

                <Table
                    id="booksTable"
                    inset="false"
                    growing="true"
                    growingThreshold="10"
                    mode="SingleSelectMaster"
                    selectionChange=".onBookSelectionChange"
                >
                    <headerToolbar>
                        <Toolbar>
                            <Title
                                text="{= 'Total Books: ' + ${booksTable>/items}.length }"
                            />
                        </Toolbar>
                    </headerToolbar>

                    <columns>
                        <Column width="25%">
                            <Text text="Title" />
                        </Column>
                        <Column width="35%">
                            <Text text="Description" />
                        </Column>
                        <Column
                            width="15%"
                            hAlign="Center"
                        >
                            <Text text="Stock" />
                        </Column>
                        <Column
                            width="25%"
                            hAlign="Center"
                        >
                            <Text text="Price" />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{title}" />
                                <Text text="{descr}" />
                                <ObjectNumber number="{stock}" />
                                <ObjectNumber
                                    number="{price}"
                                    unit="{currency_code}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </Page>
        </detailPages>
    </SplitApp>
</mvc:View>
