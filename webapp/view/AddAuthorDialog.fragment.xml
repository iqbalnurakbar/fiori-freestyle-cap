<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="addAuthorDialog"
        title="New Author"
        draggable="true"
        resizable="true"
        contentWidth="400px"
    >
        <VBox class="sapUiSmallMargin">
            <Label text="Name" />
            <Input
                id="nameInput"
                required="true"
            />

            <Label text="Bio" />
            <TextArea
                id="bioInput"
                required="true"
                growing="true"
            />
        </VBox>

        <beginButton>
            <Button
                text="Create"
                press="onCreateAuthor"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCancelAddAuthor"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
