<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog title="{= ${_bookEditMode} ? 'Edit Book' : 'Add Book'}">
        <VBox class="sapUiSmallMargin">
            <Input
                id="titleInput"
                placeholder="Title"
            />
            <TextArea
                id="descrInput"
                placeholder="Description"
                rows="4"
            />
            <Input
                id="stockInput"
                placeholder="Stock"
                type="Number"
            />
            <Input
                id="priceInput"
                placeholder="Price"
                type="Number"
            />
            <Input
                id="currencyInput"
                placeholder="Currency"
            />
        </VBox>
        <beginButton>
            <Button
                text="{= ${_bookEditMode} ? 'Save' : 'Create'}"
                press=".onCreateBook"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press=".onCancelAddBook"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
