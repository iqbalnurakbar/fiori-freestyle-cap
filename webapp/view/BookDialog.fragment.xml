<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog title="{view>/dialogTitle}">
        <VBox class="sapUiSmallMargin">
            <Input
                id="titleInput"
                placeholder="Title"
            />
            <TextArea
                id="descrInput"
                placeholder="Description"
                width="100%"
            />
            <Input
                id="stockInput"
                placeholder="Stock"
                type="Number"
            />
            <Input
                id="priceInput"
                placeholder="Price"
                type="Number"
            />
            <Input
                id="currencyInput"
                placeholder="Currency"
            />
        </VBox>
        <beginButton>
            <Button
                text="{= ${view>/dialogMode} === 'create' ? 'Create' : 'Edit'}"
                press=".onDialogBookConfirm"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press=".onDialogCancel"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
